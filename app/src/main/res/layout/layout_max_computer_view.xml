<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true">
    <TextView
        android:id="@+id/tv_popup_derease"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/shoppingbag_icon_list_minus"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorGrayText"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/et_popup_number"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_toLeftOf="@+id/tv_popup_increase"
        android:layout_toRightOf="@+id/tv_popup_derease"
        android:background="@drawable/shape_cart_count"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:maxLength="2"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/colorGrayText"
        android:textCursorDrawable="@drawable/color_edit_cursor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_popup_increase"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/shoppingbag_icon_list_add"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorGrayText"
        android:textSize="16sp" />

</LinearLayout>